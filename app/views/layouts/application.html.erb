<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <title>Stats for <%= $simple_config.accounts.last_fm.artist_name -%> | Musician Analytics App</title>    <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
    <meta name="robots" content="noindex" />
    <%= stylesheet_link_tag 'core', 'maa', :media => 'all', :cache => true -%>
    <%= javascript_include_tag :defaults, :cache => true -%>
    <%= Seer::init_visualization -%>
    <%= yield(:head) -%>
  </head>
  <body>
    <div id="container">
      <div id="header">
        <div id="branding"></div>
      </div>
      <div id="content_area">
        <%- if flash[:error] -%>
          <div class="flash_error" id="flash_error"><%= flash[:error] -%></div>
        <%- end -%>
        <div class="flash_notice" style="display:none;" id="flash_notice"><%= flash[:notice] -%></div>
        <div id="washout" style="display:none;"></div>
        <%- if flash[:notice] -%><script type="text/javascript">$('washout').toggle(); $('flash_notice').toggle();
          <%= visual_effect :fade, 'flash_notice', :duration => 1.0, :delay => 1.0 -%><%= visual_effect :fade, 'washout', :duration => 1.0, :delay => 1.0 -%></script>
        <%- end -%>
        <br />
        <%= @content_for_layout -%>
        <br style="clear: both;" />
      </div>
      <div id="footer"><p>Powered by <%= link_to 'Musician Analytics App', "http://github.com/dbalatero/musician_analytics_app" -%> | <%= link_to 'Logout', logout_path if current_user -%></p></div>
    </div>
  </body>
</html>