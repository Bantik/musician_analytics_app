<h1>Sign In</h1>

<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>
  <fieldset>
    <%= f.label :login %><br />
    <%= f.text_field :login %><br />
  </fieldset>
  <fieldset>
    <%= f.label :password %><br />
    <%= f.password_field :password %><br />
  </fieldset>
  <fieldset>
    <%= f.check_box :remember_me, :style => 'float: left;' %><label style="float: left; margin-left: 1em;">Remember Me</label>
  </fieldset>
  <%= f.submit "Sign In", :class => 'button' %>
<% end %>
